<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.sortingalgorithm"
    android:screenOrientation="portrait"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/name_app"
        android:theme="@style/AppTheme" >
        <activity
            android:name="example.sortingalgorithm.WelcomeScreen"
            android:label="@string/name_app" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="example.sortingalgorithm.ChoosingScreen"
            android:label="@string/title_activity_main_activity1" >
            <intent-filter>
                <action android:name="example.sortingalgorithm.ChoosingScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="example.sortingalgorithm.SortAlgorithmScreen"
            android:label="@string/title_activity_manhinh3" >
            <intent-filter>
                <action android:name="example.sortingalgorithm.SoftAlgorithmScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="example.sortingalgorithm.SortArrayScreen"
            android:label="@string/title_activity_manhinh4" >
            <intent-filter>
                <action android:name="example.sortingalgorithm.SoftArrayScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="example.sortingalgorithm.ResultScreen"
            android:label="@string/title_activity_result_screen" >
            <intent-filter>
                <action android:name="example.sortingalgorithm.ResultScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>